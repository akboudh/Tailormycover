{
    "manifest_version": 3,
    "name": "TailorMyCover",
    "version": "1.0",
    "description": "Generate tailored cover letters using OpenAI and your resume.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Generate Cover Letter"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}